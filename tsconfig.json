{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"strict": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": false,
		"lib": ["es6", "dom"],
		"typeRoots": ["./node_modules/@types", "./@types"],
		"declaration": true,
		"allowJs": true,
		"checkJs": false
	},
	"ts-node": {
		"experimentalResolver": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"build",
		"dist"
	],
	"types": ["node"]
}
